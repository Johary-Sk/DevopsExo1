pipeline {
	agent any

	stages {
		stages('Checkout') {
			steps {
				git branch: 'main', url: 'https://github.com/Johary-Sk/DevopsExo1.git'
			}
		}

	stage('Build Backend Image') {
		steps {
			sh 'docker build -t todo-backend ./backend'
		}
	}

	stage('Build Frontend Image') {
		steps {
			sh 'docker build -t todo-frontend ./fontend'
		}
	}

	
